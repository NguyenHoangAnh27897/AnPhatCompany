
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWebmaster.cshtml";
}

<section class="wrapper" ng-controller="aboutController">
    <h3><i class="fa fa-angle-right"></i> Quản lý trang Về Chúng Tôi</h3>

    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="control-label">Tiêu đề</label>
                            <input type="text" class="form-control round-form" ng-model="about.Title">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nội dung</label>
                            <input type="text" id="content" class="form-control round-form" ng-model="about.ContentAbout">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label">Tiêu đề</label>
                                    <input type="text" class="form-control round-form" ng-model="about.SubContent01">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label">Tiêu đề</label>
                                    <input type="text" class="form-control round-form" ng-model="about.SubContent02">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="control-label">Hình ảnh</label>
                            <input name="file" type="file" class="form-control" accept="image/*" onchange="angular.element(this).scope().UploadImage(this.files)">
                            <small class="form-text text-muted">Chọn hình với kích cỡ 1024x768 hoặc lớn hơn</small>
                            <img src="~/Images/About/{{about.Picture}}" style="width:100%; height:100vh" />
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" ng-click="EditAbout(about)">Lưu</button>
            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
<script src="~/Content/Webmaster/assets/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/assets/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('content');
</script>
<script src="~/Content/WebMaster/angular/about/AboutMasterModel.js"></script>
<script src="~/Content/WebMaster/angular/about/AboutMasterService.js"></script>
<script src="~/Content/WebMaster/angular/about/AboutMasterController.js"></script>


