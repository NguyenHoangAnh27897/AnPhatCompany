
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWebmaster.cshtml";
}

<section class="wrapper" ng-controller="productController">
    <h3><i class="fa fa-angle-right"></i> Quản lý trang Sản phẩm Hành chính sự nghiệp &amp; Doanh nghiệp</h3>

    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa</h4>
                <div class="form-group">
                    <label class="control-label">Tiêu đề Hành chính sự nghiệp</label>
                    <input type="text" class="form-control round-form" ng-model="product.CareerTitle">
                </div>
                <div class="form-group">
                    <label class="control-label">Nội dung Hành chính sự nghiệp</label>
                    <input type="text" id="careercontent" class="form-control round-form" ng-model="product.CareerContent">
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label">Tiêu đề Doanh nghiệp</label>
                    <input type="text" class="form-control round-form" ng-model="product.BusinessTitle">
                </div>
                <div class="form-group">
                    <label class="control-label">Nội dung Doanh nghiệp</label>
                    <input type="text" id="businesscontent" class="form-control round-form" ng-model="product.BusinessContent">
                </div>
            </div>
            <button type="button" class="btn btn-primary" ng-click="EditProduct(product)">Lưu</button>
        </div>
    </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
<script src="~/Content/Webmaster/assets/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/assets/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('careercontent');
    CKEDITOR.replace('businesscontent');
</script>
<script src="~/Content/WebMaster/angular/product/ProductMasterModel.js"></script>
<script src="~/Content/WebMaster/angular/product/ProductMasterService.js"></script>
<script src="~/Content/WebMaster/angular/product/ProductMasterController.js"></script>

