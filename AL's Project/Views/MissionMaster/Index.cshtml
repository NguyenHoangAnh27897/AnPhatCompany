
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWebmaster.cshtml";
}

<section class="wrapper" ng-controller="missionController">
    <h3><i class="fa fa-angle-right"></i> Quản lý trang Tầm Nhìn, Sứ Mệnh</h3>

    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa</h4>
                        <div class="form-group">
                            <label class="control-label">Tiêu đề</label>
                            <input type="text" class="form-control round-form" ng-model="mission.Title">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nội dung</label>
                            <input type="text" id="content" class="form-control round-form" ng-model="mission.SubTitle">
                        </div>
                    </div>
                <button type="button" class="btn btn-primary" ng-click="EditMission(mission)">Lưu</button>
            </div>
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><! --/wrapper -->
<script src="~/Content/Webmaster/assets/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/assets/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('content');
    CKEDITOR.replace('des1');
    CKEDITOR.replace('des2');
    CKEDITOR.replace('des3');
</script>
