
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWebmaster.cshtml";
}

<section class="wrapper" ng-controller="contactController">
    <h3><i class="fa fa-angle-right"></i> Quản lý trang Liên Hệ</h3>

    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa</h4>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="control-label">Địa chỉ</label>
                            <input type="text" class="form-control round-form" ng-model="contact.Address">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input type="text" class="form-control round-form" ng-model="contact.Email">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="control-label">Số điện thoại</label>
                            <input type="text" class="form-control round-form" ng-model="contact.Phone">
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" ng-click="EditContact(contact)">Lưu</button>
            </div>      
        </div><!-- col-lg-12-->
    </div><!-- /row -->

</section><!--/wrapper -->
<script src="~/Content/WebMaster/angular/contact/ContactMasterModel.js"></script>
<script src="~/Content/WebMaster/angular/contact/ContactMasterService.js"></script>
<script src="~/Content/WebMaster/angular/contact/ContactMasterController.js"></script>

